{
    "name": "ai-styleguide",
    "displayName": "AI Style Guide",
    "description": "An AI-powered tool that crafts personalized code style guides and provides real-time feedback to ensure consistency and quality.",
    "version": "0.0.1",
    "publisher": "Shambo",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": ["Linters"], 
    "activationEvents": ["onLanguage:*"], 
    "main": "./out/extension.js", 
    "keywords": ["style guide", "linter", "code quality"], 
    "contributes": {
        "commands": [
            {
                "command": "extension.analyzeCode",  
                "title": "Analyze Code"             
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5",
        "vscode-test": "^1.6.0"
    },
    "dependencies": {
        "axios": "^0.27.2"
    }
}
